{% extends 'base.html.twig' %}

{% block title %}Currency Converter | Logs{% endblock %}

{% block body %}
    <div class="page-wrapper">
        <h1 class="page-title">Logboek</h1>
        {% if logs is defined %}
        <table>
            <thead>
            <tr>
                <th>ID</th>
                <th>Omschrijving</th>
                <th>Bron</th>
                <th>Datum</th>
            </tr>
            </thead>
            <tbody>
            {% for log in logs %}
                <tr>
                    <td>{{ log.id }}</td>
                    <td>{{ log.description }}</td>
                    <td>{{ log.sourcefile }}</td>
                    <td>{{ log.date }}</td>
                </tr>
            {%  endfor %}
            </tbody>
        </table>
        {%  endif %}
    </div>

{% endblock %}
