{% extends 'base.html.twig' %}

{% block title %}Currency Converter | Gebruikers{% endblock %}

{% block body %}
    <div class="page-wrapper">
        <h1 class="page-title">Gebruikers</h1>
        {% for message in app.flashes('success') %}
            <div class='flash'>
                {{ message }}
            </div>
        {% endfor %}
        <a href="{{ path('register') }}">Nieuwe Gebruiker Aanmaken</a>
        <table>
            <thead>
            <tr>
                <th>ID</th>
                <th>Gebruikersnaam</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.username }}</td>
                    <td><a href="{{ path('delete', { id: user.id }) }}">Verwijderen</a></td>
                </tr>
            {%  endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}
