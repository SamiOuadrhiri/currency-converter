{% extends 'base.html.twig' %}

{% block title %}Currency Converter | Currencies{% endblock %}

{% block body %}
    <div class="page-wrapper">
        <h1 class="page-title">Currencies</h1>
        <table>
            <thead>
            <tr>
                <td>ID</td>
                <td>Currency Code</td>
            </tr>
            </thead>
            <tbody>
            {% for currencyCode in currencyCodes %}
                <tr>
                    <td>{{ currencyCode.id }}</td>
                    <td>{{ currencyCode.code }}</td>
                </tr>
            {%  endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
